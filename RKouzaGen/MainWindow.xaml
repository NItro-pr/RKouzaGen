<Window x:Class="RKouzaGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RKouzaGen"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="例会講座自動割り当てマシーン" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBox x:Name="NameList_TextBox" TextWrapping="Wrap" Width="300" Height="150" AcceptsReturn="True" AcceptsTab="True"/>
            <Button Content="正規化" Click="NormalizeButton_Click"/>
            <TextBox x:Name="NormalizedList_TextBox" TextWrapping="Wrap" Width="300" Height="150" IsReadOnly="True" AcceptsReturn="True" AcceptsTab="True"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBox x:Name="YearTextBox" Width="50" Margin="5,0,0,0"/>
                <TextBlock Text="年" VerticalAlignment="Center"/>
                <TextBox x:Name="MonthTextBox" Width="50" Margin="5,0,0,0"/>
                <TextBlock Text="月"/>
            </StackPanel>
            <Button x:Name="AssignmentGenerateButton" IsEnabled="False" Content="割り当てを作成!!!" Click="AssignmentGenerateButton_Click" ToolTip="まずは名簿の正規化を行ってください"/>
            <TextBox x:Name="Assignment_TextBox" IsReadOnly="True" Width="300" Height="150" TextWrapping="Wrap"/>
			<Button Content="クリップボードにコピー" Click="CopyToClipboardButton_Click"/>
		</StackPanel>

    </Grid>
</Window>
